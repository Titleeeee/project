Tea_choice = int(input('Please choose a flavor : '))
Tea_list = ['ชานมใต้หวัน','ชานมกาแฟ','ชานมโกโก้','ชานมเผือก','ชานมลิ้นจี่','ชานมคาราเมล','ชานมน้ำผึ้ง','ชาดำเย็น','ชาไทย','ชาเขียว','ชานมเเอปเปิ้ล',]
