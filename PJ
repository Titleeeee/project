Tea = 19
s = 0
m = 5
l = 10 
xl = 15
Ts = Tea + s
Tm = Tea + m
Tl = Tea + l
Txl = Tea + xl
Top = 10
Top_2 = Top+Top
avg = 0

def MENU():
